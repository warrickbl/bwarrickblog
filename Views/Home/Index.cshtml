@{
    ViewBag.Title = "Home Page";
}
<title>
    Blog Time
</title>
<section class="module">
    <div class="container">
        <div class="row">

            <div class="col-sm-6 col-sm-offset-3">

                <div class="module-header">
                    <h2 class="module-title">Welcome!</h2>
                    <div class="module-line"></div>

                    <div class="row">
                        <div class="col-sm-4">
                            <div class="iconbox wow bounceIn" style="cursor: pointer;">
                                <div class="iconbox-icon">
                                    <span class="fa fa-plus-square-o" style="font-size:40px"></span>
                                </div>
                                <div class="iconbox-text">
                                    <h3 class="iconbox-title">@Html.ActionLink("Log In", "Login", "Account")</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            
                                <div class="iconbox wow bounceIn">
                                    <div class="iconbox-icon">
                                        <span class="fa fa-comment-o" style="font-size:40px"></span>
                                    </div>
                                    <div class="iconbox-text">
                                        <h3 class="iconbox-title">@Html.ActionLink("Blog Posts", "Index", "Posts")</h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-sm-4">
                            
                                <div class="iconbox wow bounceIn">
                                    <div class="iconbox-icon">
                                        <span class="fa fa-female" style="font-size:40px"></span>
                                    </div>
                                    <div class="iconbox-text">
                                        <h3 class="iconbox-title">@Html.ActionLink("The Author", "About", "Home")</h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="module-line"></div>
                </div>

            </div>

        </div><!-- .row -->
    </div>
</section>


